{
  "auto_validation": true,
  "auto_backtest": true,
  "max_strategies": 30,
  "generation_interval": 7200,
  "backtest_interval": 7200,
  "cleanup_old_strategies": true,
  "strategy_types": ["volatility", "scalping", "momentum", "breakout"],
  "models": ["cogito:3b", "phi3:mini", "cogito:8b", "mistral:7b-instruct-q4_0"],
  "min_backtest_score": 0.1,
