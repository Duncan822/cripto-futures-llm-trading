# Configurazione API Exchange
# Inserisci le tue credenziali API di Binance per trading reale
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Configurazione Ollama
OLLAMA_BASE_URL=http://localhost:11434

# Configurazione Telegram (opzionale)
TELEGRAM_TOKEN=your_telegram_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Configurazione Trading
DRY_RUN=true
MAX_OPEN_TRADES=3
STAKE_AMOUNT=100

# Configurazione Logging
LOG_LEVEL=INFO
LOG_FILE=user_data/logs/bot.log

# Configurazione Database (opzionale)
DB_URL=sqlite:///user_data/tradesv3.sqlite

# Configurazione Backtest
BACKTEST_TIMERANGE=20240101-20241231
BACKTEST_TIMEFRAME=5m 